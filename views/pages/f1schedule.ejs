<%- include("../partials/header") %>

    <%- include("../partials/navbar")%>
        <div class="center">
            <h1>F1 2022 Schedule</h1>
            <table class="pure-table pure-table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Circuit</th>
                        <th>Country</th>
                        <th>Date</th>
                        <th>Qualifying</th>
                        <th>Wikipedia page</th>
                    </tr>

                </thead>
                <tbody>
                    <% for(var i=0; i < schedule.MRData.RaceTable.Races.length ; i++ ){ %>

                        <tr>
                            <td>
                                <%=schedule.MRData.RaceTable.Races[i].round%>
                            </td>
                            <td>
                                <%=schedule.MRData.RaceTable.Races[i].raceName%>
                            </td>
                            <td>
                                <%=schedule.MRData.RaceTable.Races[i].Circuit.circuitName%>
                            </td>
                            <td>
                                <%=schedule.MRData.RaceTable.Races[i].Circuit.Location.country %>
                            </td>
                            <td>
                                <%=schedule.MRData.RaceTable.Races[i].date %>
                            </td>
                            <td>
                                <%=schedule.MRData.RaceTable.Races[i].Qualifying.date %>
                            </td>
                            <td style="text-align: center;">
                                <a href="<%=schedule.MRData.RaceTable.Races[i].url %>">Link</a>
                            </td>

                        </tr>

                        <% }; %>
                </tbody>
            </table>
        </div>
        <%- include("../partials/footer")%>